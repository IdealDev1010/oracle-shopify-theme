{{'text-title.css' | asset_url | stylesheet_tag}}

<div class="text-title-wrapper">
    <div class="text-title page-width">
        <p class="text-title">{{ section.settings.title }}</p>
    </div>
</div>

{% schema %}
    {
        "name": "text title",
        "class": "text-title",
        "settings": [
            {
                "type": "richtext",
                "id": "title",
                "label": "Title",
                "default": "<p>text</p>"
            }
        ],

        "presets": [
            {
              "name": "text title"
            }
        ]
    }
{% endschema %}

