{{'product-slide.css' | asset_url |stylesheet_tag}}
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script> 
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.13.2/themes/base/jquery-ui.min.css" />
</head>
<div class="product-slide__content swiper" id="swiper1">
    <div class="product-slide__wrapper swiper-wrapper">
        {% for product in section.settings.collection.products %}
            {% for image in product.images %}
                <div class="product__image swiper-slide"> <a href="{{product.url}}"><img src="{{ image.src | img_url: '500x600' }}"/></a></div>
            {% endfor %}
        {% endfor %}
    </div>
   
    <div class="swiper-btn-prev">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-arrow" width="40" height="40" viewBox="0 0 40 40" fill="none">
